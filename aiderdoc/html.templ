package aiderdoc

templ EntriesTemplate(articles []Article) {
	<!DOCTYPE html>
	<html lang="en">
		<head>
			<meta charset="UTF-8"/>
			<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
			<title>Aider Chronicle</title>
			<script src="https://cdn.tailwindcss.com"></script>
		</head>
		<body class="bg-gray-100 p-8">
			<div class="max-w-4xl mx-auto">
				<h1 class="text-3xl font-bold mb-6">Aider Chronicle</h1>
				for _, article := range articles {
					<article class="mb-8 bg-white shadow-md rounded-lg p-6">
						<h2 class="text-2xl font-semibold mb-4">Session started at { article.StartTime.Format("January 2, 2006 15:04:05") }</h2>
						for _, section := range article.Sections {
							<section class="mb-6">
								<h3 class="text-xl font-medium mb-3">Section started at { section.StartTime.Format("15:04:05") }</h3>
								<ul class="space-y-4">
									for _, entry := range section.Entries {
										<li class="border-b pb-2">
											<span class="text-sm text-gray-600">{ entry.Timestamp.Format("15:04:05") }</span>
											<p class="mt-1 whitespace-pre-wrap">{ entry.Content }</p>
										</li>
									}
								</ul>
							</section>
						}
					</article>
				}
			</div>
		</body>
	</html>
}
