package aiderdoc

templ EntriesTemplate(articles []Article) {
	<!DOCTYPE html>
	<html lang="en">
		<head>
			<meta charset="UTF-8"/>
			<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
			<title>Aider Chronicle</title>
			<style>
				body {
					font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
					line-height: 1.5;
					max-width: 800px;
					margin: 0 auto;
					padding: 2rem;
					color: #333;
				}
				.article {
					margin-bottom: 2rem;
					border-top: 1px solid #ddd;
					padding-top: 2rem;
				}
				.section {
					margin-bottom: 1.5rem;
				}
				.entry {
					margin-bottom: 1rem;
				}
				.timestamp {
					font-size: 0.875rem;
					color: #666;
				}
				.content {
					margin-top: 0.25rem;
					white-space: pre-wrap;
				}
			</style>
		</head>
		<body>
			for _, article := range articles {
				<div class="article">
					<div class="timestamp">{ article.StartTime.Format("2006-01-02 15:04:05") }</div>
					for _, section := range article.Sections {
						<div class="section">
							for _, entry := range section.Entries {
								<div class="entry">
									<div class="timestamp">{ entry.Timestamp.Format("15:04:05") }</div>
									<div class="content">{ entry.Content }</div>
								</div>
							}
						</div>
					}
				</div>
			}
		</body>
	</html>
}
